{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
     "baseUrl": ".", 
         "paths": {
      "@/*": ["src/*"]                         // âœ… add this line
    },
    "plugins": [
      {
        "name": "next"
        
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/components/Live/LiveStreamUI.jsx", "src/components/MyBooking/Mybooking.jsx", "src/app/dashboard/my-bookings/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
